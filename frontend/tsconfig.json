{
  "compilerOptions": {
    "baseUrl": ".", // 루트를 기준으로
    "paths": {
      "@/*": [
        "src/*"
      ] // "@/..." → "src/..." 매핑
    },
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "target": "es2022",
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
